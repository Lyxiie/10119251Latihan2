<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:mContext=".RegisterActivity">>

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/ic_header_back"
        android:translationZ="2dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="@id/header"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@id/back_arrow"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/back_arrow"
        app:layout_constraintLeft_toRightOf="@id/back_arrow"/>

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_header"
        android:layout_marginTop="-22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gray_15"
        android:hint="Username"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/header"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gray_15"
        android:hint="Email"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/username"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gray_15"
        android:hint="Phone Number"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/email"/>

    <ImageView
        android:id="@+id/radio_on_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_register_radio_on"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textSize="17dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@+id/radio_on_1"
        app:layout_constraintBottom_toBottomOf="@+id/radio_on_1"
        app:layout_constraintTop_toTopOf="@+id/radio_on_1"/>

    <ImageView
        android:id="@+id/radio_off_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_register_radio_off"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        app:layout_constraintRight_toLeftOf="@+id/female"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:textSize="17dp"
        android:layout_marginRight="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/radio_off_1"
        app:layout_constraintTop_toTopOf="@+id/radio_off_1"/>

    <EditText
        android:id="@+id/blood_type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/gray_15"
        android:layout_marginTop="10dp"
        android:hint="Blood Type"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/radio_on_1"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <ImageView
        android:id="@+id/drop_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_register_dropdown"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/male"
        app:layout_constraintTop_toBottomOf="@+id/male"/>

    <EditText
        android:id="@+id/reshus"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/gray_15"
        android:layout_marginTop="10dp"
        android:hint="Reshus"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/radio_on_1"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/drop_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_register_dropdown"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/female"/>

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gray_15"
        android:hint="Password"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/blood_type"/>

    <EditText
        android:id="@+id/repass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gray_15"
        android:hint="Retype Password"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/pass"/>

    <ImageView
        android:id="@+id/radio_on_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_register_radio_on"
        app:layout_constraintTop_toBottomOf="@+id/repass"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal"
        android:textSize="17dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@+id/radio_on_2"
        app:layout_constraintBottom_toBottomOf="@+id/radio_on_2"
        app:layout_constraintTop_toTopOf="@+id/radio_on_2"/>

    <ImageView
        android:id="@+id/radio_off_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_register_radio_off"
        app:layout_constraintTop_toBottomOf="@+id/repass"
        app:layout_constraintRight_toLeftOf="@+id/organization"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
    android:id="@+id/organization"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Organization"
    android:textSize="17dp"
    android:layout_marginRight="40dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="@+id/radio_off_2"
    app:layout_constraintTop_toTopOf="@+id/radio_off_2"/>

    <EditText
        android:id="@+id/job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gray_15"
        android:hint="Job"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/personal"/>

    <ImageView
        android:id="@+id/drop_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_register_dropdown"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/organization"/>

    <EditText
        android:id="@+id/home_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gray_15"
        android:hint="Home Address"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/job"/>

    <EditText
        android:id="@+id/default_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/gray_15"
        android:hint="Default Location"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/home_address"/>

    <ImageView
        android:id="@+id/needed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_blood_needed_location"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_address"/>

    <ImageView
        android:id="@+id/reg_term"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_register_terms_on"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_location"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agree with Terms and Conditions"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@+id/reg_term"
        app:layout_constraintBottom_toBottomOf="@+id/reg_term"
        app:layout_constraintTop_toTopOf="@+id/reg_term"/>

    <Button
        android:id="@+id/btn_register"
        style="@style/btn_style_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_term"
        android:onClick="btn_register"/>


</androidx.constraintlayout.widget.ConstraintLayout>