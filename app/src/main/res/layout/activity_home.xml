<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:mContext=".HomeActivity">
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_side_menu"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:translationZ="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_notification"
        android:translationZ="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/header_profile"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/ic_header_profile"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/foto_profil"
        app:civ_border_color="@color/white"
        app:civ_border_width="6dp"
        app:civ_shadow_radius="10dp"
        android:layout_marginTop="110dp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/relative_1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_line"
        app:layout_constraintTop_toBottomOf="@+id/header_profile">
    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muhamad Ridwan"
        android:textSize="18dp"
        android:textColor="@color/light_blue"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood type : B"
            android:textSize="16dp"
            android:textColor="@color/font_title"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nama"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/relative_1"
        android:background="@drawable/bg_line">

        <TextView
            android:id="@+id/no_75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="90dp"
            android:layout_toLeftOf="@+id/no_100"
            android:text="75"
            android:textColor="@color/light_blue"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="100"
            android:textColor="@color/light_blue"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no_330"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/no_100"
            android:layout_marginTop="10dp"
            android:text="330"
            android:textColor="@color/light_blue"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_75"
            android:layout_marginRight="65dp"
            android:layout_toLeftOf="@+id/no_100"
            android:text="BLOOD GIVE"
            android:translationZ="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_100"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="65dp"
            android:translationZ="4dp"
            android:text="BLOOD RECEIVED" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_330"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/no_100"
            android:translationZ="4dp"
            android:text="THANKS" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_line"
        app:layout_constraintTop_toBottomOf="@+id/relative_2">

        <ImageView
            android:id="@+id/search_donor"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_search_donor" />

        <TextView
            android:id="@+id/text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_donor"
            android:layout_marginLeft="50dp"
            android:text="Search Donor"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_search"
            android:layout_marginLeft="45dp"
            android:text="Search donor near you"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/blood_needed"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/search_donor"
            android:src="@drawable/ic_blood_needed" />

        <TextView
            android:id="@+id/text_blood_needed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blood_needed"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@id/search_donor"
            android:text="Blood Needed"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_user_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_blood_needed"
            android:layout_marginLeft="95dp"
            android:layout_toRightOf="@id/search_donor"
            android:text="4 Users need blood"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/message_1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/text1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_message" />
        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_1"
            android:layout_marginLeft="70dp"
            android:text="Message"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_message"
            android:layout_marginLeft="60dp"
            android:text="5 New Messages"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/donor_history"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/text_user_need"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/search_donor"
            android:src="@drawable/ic_donor_history" />

        <TextView
            android:id="@+id/text_donor_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donor_history"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@id/search_donor"
            android:text="Donor History"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_donor_history"
            android:layout_marginLeft="95dp"
            android:layout_toRightOf="@id/search_donor"
            android:text="5 Gives, 2 Received"
            android:textSize="12dp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>